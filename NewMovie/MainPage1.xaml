<Page x:Class="NewMovie.MainPage1"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:NewMovie"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="MainPage1">

    <Grid Margin="2.5">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Label Content="Movies" HorizontalContentAlignment="Center" Margin="2.5"/>
        <ListBox Grid.Row="1" x:Name="LB_Movie" Margin="2.5" HorizontalContentAlignment="Center"/>
        <Grid Grid.Row="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1*"/>
                <ColumnDefinition Width="1*"/>
                <ColumnDefinition Width="1*"/>
            </Grid.ColumnDefinitions>
            <Button Grid.Column="0" Content="Új" x:Name="BTN_NewMovie" Margin="2.5"/>
            <Button Grid.Column="1" Content="Szerkesztés" x:Name="BTN_NEditMovie" Margin="2.5"/>
            <Button Grid.Column="2" Content="Törlés" x:Name="BTN_DeleteMovie" Margin="2.5"/>
        </Grid>
    </Grid>
</Page>
